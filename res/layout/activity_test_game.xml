<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridView
        android:id="@+id/gv_cards"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/gv_cards2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <GridView
        android:id="@+id/gv_cards3"
        android:layout_width="80dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bt_chupai"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/gv_cards3"
        android:layout_centerInParent="true"
        android:text="出牌" />

    <Button
        android:id="@+id/bt_rechupai"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_chupai"
        android:layout_centerInParent="true"
        android:text="重新出牌" />

    <Button
        android:id="@+id/bt_restart"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_rechupai"
        android:layout_centerInParent="true"
        android:text="再来一局" />

</RelativeLayout>